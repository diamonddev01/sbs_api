{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "moduleResolution": "Node",
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}